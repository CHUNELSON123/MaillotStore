@page "/checkout"
@using MaillotStore.Components
@using MaillotStore.Components.Sections

<div class="checkout-page-container">

    <HomePageSearchBar />

    <div class="full-width-section checkout-section-container" style="margin-top: 0px;">
        <div class="container py-5">
            <h1 class="text-white fw-bold text-center mb-5">Check Out</h1>

            <div class="row">
                <div class="col-md-6 mb-5 mb-md-0">
                    <h2 class="fw-bold mb-3">Your Order Summary</h2>
                    <table class="table table-bordered text-white checkout-table">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 60%;">Product</th>
                                <th scope="col" style="width: 20%;">Quantity</th>
                                <th scope="col" style="width: 20%;">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/Images/atlectico.png" alt="Atletico Jersey" style="width: 50px; height: 50px; object-fit: cover;" class="me-3" />
                                        <div>
                                            <p class="mb-0 fw-bold">Atletico de madrid Home Jersey</p>
                                            <p class="mb-0 text-muted">(2025/2026) - RED & WHITE STRIPES</p>
                                            <p class="mb-0">Size: S</p>
                                          
                                        </div>
                                        <a href="#" class="text-danger ms-3 text-decoration-none">Remove</a>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <i class="bi bi-dash"></i>
                                        <span class="mx-2">2</span>
                                        <i class="bi bi-plus"></i>
                                        
                                    </div>
                                </td>
                                <td class="fw-bold">FCFA 15,000 XAF</td>
                            </tr>

                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/Images/atlectico.png" alt="Atletico Jersey" style="width: 50px; height: 50px; object-fit: cover;" class="me-3" />
                                        <div>
                                            <p class="mb-0 fw-bold">Atletico de madrid Home Jersey</p>
                                            <p class="mb-0 text-muted">(2025/2026) - RED & WHITE STRIPES</p>
                                            <p class="mb-0">Size: S</p>
                                           
                                        </div>
                                        <a href="#" class="text-danger ms-3 text-decoration-none">Remove</a>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <i class="bi bi-dash"></i>
                                        <span class="mx-2">1</span>
                                        <i class="bi bi-plus"></i>
                                         
                                    </div>
                                </td>
                                <td class="fw-bold">FCFA 30,000 XAF</td>
                            </tr>
                        </tbody>
                    </table>
                    <h4 class="fw-bold text-end mt-4">SUBTOTAL: FCFA 60,000 XAF</h4>
                </div>

                <div class="col-md-6">
                    <h2 class="fw-bold mb-3">Customer Details</h2>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" />
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="phone" />
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Delivery Address</label>
                            <input type="text" class="form-control" id="address" />
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Optional Message</label>
                            <textarea class="form-control" id="message" rows="3"></textarea>
                        </div>
                      
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-5">
                <a href="https://wa.me/?text=I%20want%20to%20place%20an%20order" class="btn btn-lg btn-dark whatsapp-button">
                    Check Out Via WhatsApp
                </a>
            </div>

        </div>
    </div>

</div>

<Footer />