@page "/admin/orders"
@using MaillotStore.Components
@using MaillotStore.Data
@using MaillotStore.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<div class="d-flex admin-dashboard-container">
    <AdminSidebar />
    <div class="main-content-dashboard flex-grow-1 p-5" style="margin-top: 0px;">
        <h1 class="text-white fw-bold mb-5">Order List</h1>
        <table class="table table-bordered text-white admin-table">
            <thead>
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Products</th>
                    <th scope="col">Price</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (_orders == null)
                {
                    <tr><td colspan="5"><em>Loading orders...</em></td></tr>
                }
                else
                {
                    var serialNumber = 1;
                    @foreach (var order in _orders)
                    {
                        <tr>
                            <th scope="row">@(serialNumber++)</th>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderItems.Count</td>
                            <td>FCFA @order.TotalPrice.ToString("N0") XAF</td>
                            <td>
                                <a href="/admin/view-order/@order.Id" class="btn btn-sm btn-info">View</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <nav aria-label="Order page navigation" class="d-flex justify-content-center mt-5 mb-5">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>

@code {
    private List<Order> _orders;

    protected override async Task OnInitializedAsync()
    {
        // Load orders and include the OrderItems collection to get the count
        _orders = await DbContext.Orders
                                 .Include(o => o.OrderItems)
                                 .OrderByDescending(o => o.OrderDate)
                                 .ToListAsync();
    }
}