@page "/add-product"
@using MaillotStore.Components

<div class="d-flex admin-dashboard-container">

    <AdminSidebar />

    <div class="main-content-dashboard flex-grow-1 p-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-white fw-bold">Add New Product</h1>
            <a href="/products" class="btn btn-dark">Back</a>
        </div>

        <form class="text-white">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="productName" class="form-label">Product Name:</label>
                    <input type="text" class="form-control" id="productName">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="text" class="form-control" id="price">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="jerseySeason" class="form-label">Jersey Season:</label>
                    <div class="d-flex">
                        <select class="form-select me-2" id="jerseySeason">
                            <option>HOME</option>
                            <option>AWAY</option>
                            <option>THIRD</option>
                        </select>
                        <select class="form-select" id="jerseyYear">
                            <option>2025/2026</option>
                            <option>2024/2025</option>
                            <option>2023/2024</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="stockQuantity" class="form-label">Stock Quantity:</label>
                    <input type="text" class="form-control" id="stockQuantity">
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control" id="description" rows="5"></textarea>
            </div>

            <div class="mb-3">
                <label for="imageUpload" class="form-label">Image Upload:</label>
                <div class="row">
                    <div class="col-4">
                        <input type="file" class="form-control" id="imageUpload1">
                    </div>
                    <div class="col-4">
                        <input type="file" class="form-control" id="imageUpload2">
                    </div>
                    <div class="col-4">
                        <input type="file" class="form-control" id="imageUpload3">
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <label class="form-label">Featured:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="featuredYes" value="yes">
                    <label class="form-check-label" for="featuredYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="featuredNo" value="no">
                    <label class="form-check-label" for="featuredNo">No</label>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-success me-2">Saved</button>
                <button type="button" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>

</div>