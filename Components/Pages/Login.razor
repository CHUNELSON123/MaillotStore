@page "/login"
@using MaillotStore.Components
@using MaillotStore.Components.Sections

<div class="login-page-container">

    <HomePageSearchBar />

    <div class="full-width-section signup-form-container">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="signup-form p-5">
                        <div class="text-center mb-5">
                            <h4 class="text-white fw-bold">LOGIN TO YOUR INFLUENCER ACCOUNT</h4>
                            <p class="text-white">Access your dashboard and manage your sales!</p>
                        </div>
                        <form class="text-white">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email/Phone Number</label>
                                <input type="text" class="form-control" id="email">
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password">
                                <a href="#" class="form-text text-info">Forgot Password?</a>
                            </div>
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-light">Login</button>
                            </div>
                            <div class="text-center mt-3">
                                <p>Don't have an account? <a href="/signup" class="text-info">Sign Up</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <Footer />
</div>