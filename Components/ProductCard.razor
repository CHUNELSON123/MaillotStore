<div class="col-6 col-md-3 mb-4">
    <div class="card product-card h-100">
        <img class="card-img-top"
             src="@ImageUrl"
             alt="@Title"
             style="height: 300px; object-fit: cover;" />

        <div class="card-body">
            @* NOTE: Removed text-center here and will rely on CSS for alignment *@
            <h5 class="card-title product-title">@Title</h5>
            <p class="product-price mb-3">@Price</p>
            <p class="product-season mb-3">@Season</p>

            <a href="@LinkUrl" class="btn btn-sm btn-dark w-75 mb-2">View Details</a>
            <a href="#" class="btn btn-sm btn-primary w-75">Add to Cart</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = "/Images/placeholder.png";

    [Parameter]
    public string Title { get; set; } = "Placeholder Jersey Title";

    [Parameter]
    public string Price { get; set; } = "FCFA 0 XAF";

    [Parameter]
    public string Season { get; set; } = "(Season N/A)";

    [Parameter]
    public string LinkUrl { get; set; } = "#"; // For View Details link
}
